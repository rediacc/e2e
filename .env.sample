# Base URL for the application under test
BASE_URL=https://test.com

# Test user credentials
TEST_USER_EMAIL=test@test.com
TEST_USER_PASSWORD=test

# System admin credentials (matches Elite's SYSTEM_ADMIN_*)
SYSTEM_ADMIN_EMAIL=admin@rediacc.io
SYSTEM_ADMIN_PASSWORD=admin

# Test environment settings
NODE_ENV=test
CI=false

# Browser settings
BROWSER=chromium
HEADLESS=false
SLOW_MO=100

# Debugging settings
DEBUG=false
VERBOSE=false

# Test data settings
USE_REAL_DATA=false
CLEANUP_TEST_DATA=true

# API settings
API_TIMEOUT=5000
PAGE_TIMEOUT=5000

# Screenshot settings
TAKE_SCREENSHOTS=true
SCREENSHOT_ON_FAILURE=true
FULL_PAGE_SCREENSHOTS=true

# Video settings
RECORD_VIDEO=on-failure
VIDEO_SIZE_WIDTH=1440
VIDEO_SIZE_HEIGHT=900

# Report settings
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
OPEN_REPORT_AFTER_TEST=false

# Parallel execution
MAX_WORKERS=4
TEST_TIMEOUT=30000

# Test execution control
STOP_ON_FAILURE=false